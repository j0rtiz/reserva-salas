// app global css
.border-dark {
  border-top: 1px solid #424242;
  border-left: 1px solid #424242;
  border-right: 1px solid #424242;
  box-shadow: none;
}

.border-light {
  border: 1px solid alpha(#375A64, 70%) /* #BDBDBD */;
  box-shadow: none;
}

.hover:hover {
  background-color: alpha(#424242, 50%) !important;
}
